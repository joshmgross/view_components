<%= render Primer::BaseComponent.new(**@system_arguments, classes: @form_group_classes ) do %>
    <label for="<%= @input_id %>" class="FormControl-label <%= @visually_hide_label %>">
        <%= @label_text %>
    </label>
    <% if leading_visual || @show_clear_button %>
        <div class="<%= @field_wrap_classes %>">
            <%= leading_visual %>
            <%= render Primer::BaseComponent.new(tag: :input, placeholder: @placeholder, id: @input_id, name: @input_name, invalid: @invalid, disabled: @disabled, type: @type, classes: @form_control_classes) do %><% end %>
            <% if @show_clear_button %>
                <button id="<%= @input_id %>-clear" class="FormControl-trailingAction" aria-label="Clear" <%= @disabled %>><%= primer_octicon "x" %></button>
            <% end %>
        </div>
    <% else %>
        <%= render Primer::BaseComponent.new(tag: :input, placeholder: @placeholder, id: @input_id, name: @input_name, disabled: @disabled, invalid: @invalid, type: @type, classes: @form_control_classes) do %><% end %>
    <% end %>
<% end %>
